{
  "hosting": {
    // Drops `.html` from uploaded URLs
    "cleanUrls": true,
    // Removes trailing slashes from URLs
    // "trailingSlash": false,
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      ".git/",
      ".git*"
    ],
    "redirects": [
      {
        "source": "https://www.fatalentropy.com/:path*",
        "destination": "https://fatalentropy.com/:path",
        "type": 301
      },
      {
        "source": "/blog/:post*",
        "destination": "/:post",
        "type": 301
      },
      {
        "source": "/index.xml",
        "destination": "/feed.xml",
        "type": 301
      }
    ],
    "headers": [
      {
        "source": "**/*.@(eot|otf|ttf|ttc|woff|css|js|png|jpg|jpeg|gif|tiff)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=3600, s-maxage=172800"
          }
        ]
      }
    ]
  }
}
